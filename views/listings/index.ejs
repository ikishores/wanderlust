<%layout('/layouts/boilerplate') %>

<h3>All Listings</h3>

<% if (alllistings.length === 0) { %>
    <p>No listings available.</p>
<% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <% for(let listing of alllistings) { %>
            <a class="listing-link" href="/listings/<%= listing._id %>">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"><b><%= listing.title %></b><br>
                        <%= listing.price ? listing.price.toLocaleString('en-IN') : 'Price not available' %> / night
                    </div>
                </div>
            </a>
        <% } %>
    </div>
<% } %>
